<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:orientation="vertical" >

    <!-- First Row -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/rectangle"
        android:orientation="horizontal" >

        <!-- First Rectangle -->
        <TextView
            android:layout_width="0dp"
            android:id="@+id/idRec1"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="2"
            android:background="@color/red"
            android:textSize="24sp" >
        </TextView>
        
		<!-- Second Rectangle -->	
        <TextView
            android:layout_width="0dp"
            android:id="@+id/idRec2"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@color/gray"
            android:textSize="24sp" />

        <!-- Fourth Rectangle -->
        <TextView
            android:layout_width="0dp"
            android:id="@+id/idRec3"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="3"
            android:background="@color/LimeGreen"
            android:textSize="24sp" />
    </LinearLayout>
    
    <!-- Second Row with vertical layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:background="@drawable/rectangle"
        android:orientation="vertical" >

        <!-- First Rectangle -->
        <TextView
            android:layout_width="match_parent"
            android:id="@+id/idRec4"
            android:layout_height="0dp"
            android:layout_margin="5dp"
            android:layout_weight="2"
            android:background="@color/Magenta"
            android:textSize="24sp" />
        
        <!-- Second Rectangle -->
        <TextView
            android:layout_width="match_parent"
            android:id="@+id/idRec5"
            android:layout_height="0dp"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@color/FireBrick"
            android:textSize="24sp" />

		<!-- Third Rectangle -->
        <TextView
            android:layout_width="match_parent"
            android:id="@+id/idRec6"
            android:layout_height="0dp"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@color/white"
            android:textSize="24sp" />

		<!-- Slider --> 
    	<SeekBar
            android:id="@+id/SliderID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="50" >
        </SeekBar>
        
	</LinearLayout>

</LinearLayout>